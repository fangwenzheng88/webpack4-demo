<section class="categories-wrap">
    <header class="categories-header">
        <h1>
            <%= page.title %>
        </h1>
    </header>
    <% if (site.categories && site.categories.length && site.categories.forEach){ %>
    <%
        var cats = [];
        site.tags.forEach(function(cat){
            cats.push(`<li class="categories-item"><a href="${url_for(cat.path)}">${cat.name}</a><span class="bage">${cat.length}</span></li>`);
        });
        %>
    <ul class='categories-content'>
        <%- cats.join('') %>
    </ul>
    <% } %>
</section>